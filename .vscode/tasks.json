{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "command": "cmake",
            "type": "shell",
            "args": [
                "../"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "make",
            "command": "make",
            "type": "shell",
            "args": [
                "-j20"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "build",
            "dependsOn": [
                "cmake",
                "make"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "./*"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        }
    ],
}